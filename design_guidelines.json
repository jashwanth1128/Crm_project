{
  "design_system": {
    "identity": {
      "name": "E1_CRM_Pro",
      "archetype": "The Executive Suite",
      "principles": [
        "Fusion over Imitation: Mix Swiss clarity with SaaS utility.",
        "Emotion First: Trust, Efficiency, and Control.",
        "Content is King: Data density without clutter.",
        "Zoom In: Focus on the metric that matters.",
        "Negative Space: Use whitespace to group data, not just lines."
      ]
    },
    "typography": {
      "font_family": {
        "headings": "Outfit, sans-serif",
        "body": "Geist Sans, Inter, sans-serif",
        "mono": "JetBrains Mono, monospace"
      },
      "scale": {
        "h1": "text-4xl font-bold tracking-tight",
        "h2": "text-3xl font-semibold tracking-tight",
        "h3": "text-2xl font-semibold tracking-tight",
        "h4": "text-xl font-medium tracking-tight",
        "body_lg": "text-lg leading-relaxed",
        "body_base": "text-base leading-relaxed",
        "body_sm": "text-sm leading-normal",
        "caption": "text-xs text-muted-foreground uppercase tracking-wider"
      },
      "imports": [
        "@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap');",
        "@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap');"
      ]
    },
