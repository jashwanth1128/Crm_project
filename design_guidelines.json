    "spacing": {
      "container_padding": "p-6 md:p-8 lg:p-12",
      "section_gap": "gap-8",
      "item_gap": "gap-4",
      "radius": "rounded-md"
    },
    "layout": {
      "grid_mode": "Bento Mode B (High Density)",
      "sidebar_width": "w-64",
      "max_width": "max-w-7xl mx-auto"
    },
    "components": {
      "buttons": {
        "style": "sharp or slightly rounded (rounded-md)",
        "primary": "bg-primary text-primary-foreground hover:bg-primary/90 shadow-sm",
        "secondary": "bg-secondary text-secondary-foreground hover:bg-secondary/80",
        "ghost": "hover:bg-accent hover:text-accent-foreground"
      },
      "cards": {
        "style": "flat with subtle border, no shadow by default",
        "hover": "hover:border-primary/20 transition-colors duration-200"
      },
      "inputs": {
        "style": "bg-background border-input focus:ring-1 focus:ring-ring"
      }
    },
    "motion": {
      "transitions": "transition-all duration-200 ease-in-out",
      "page_transition": {
        "initial": { "opacity": 0, "y": 10 },
        "animate": { "opacity": 1, "y": 0 },
        "exit": { "opacity": 0, "y": -10 }
      }
    }
  },
